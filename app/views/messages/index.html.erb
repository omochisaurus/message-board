<h1>Messages#index</h1>
<p>Find me in app/views/messages/index.html.erb</p>


<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
  <span class="label label-info">  名前:</span>
  <%= f.text_area :name ,:size => "50*1" %>

  <b>内容:</b>
  <%= f.text_area :body ,:size => "50*1" %>
  <br/>
  <br/>
  <%= f.submit class: "btn btn-sm btn-primary" %>
  
<% end %>